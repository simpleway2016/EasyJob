<Window x:Class="SunRizStudio.Dialogs.AlarmWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SunRizStudio.Dialogs"
        mc:Ignorable="d"
        Title="报警窗口" Height="500" Width="800" Loaded="Window_Loaded">
    <Grid>
        <StackPanel x:Name="panelSearch" VerticalAlignment="Top" Height="30" Orientation="Horizontal">
            <TextBlock Text="起始时间：" Margin="3,7,0,-7"></TextBlock>
            <TextBox Text="{Binding AlarmTime[0]}" Height="22" Width="80"></TextBox>
            <TextBlock Text="结束时间：" Margin="3,7,0,-7"></TextBlock>
            <TextBox Text="{Binding AlarmTime[0]}" Height="22" Width="80"></TextBox>
            <TextBlock Text="点名：" Margin="3,7,0,-7"></TextBlock>
            <TextBox Text="{Binding Address}" Height="22" Width="80"></TextBox>
            <Button Content="搜索" Height="22" Width="50" Margin="5,0,0,0" x:Name="btnSearch" Click="btnSearch_Click"></Button>
        </StackPanel>
        <ListView x:Name="list" Margin="0,30,0,0" SelectionChanged="list_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="报警内容" Width="220" DisplayMemberBinding="{Binding Content}"/>
                    <GridViewColumn Header="点名称" Width="auto" DisplayMemberBinding="{Binding Address}"/>
                    <GridViewColumn Header="点描述" Width="auto" DisplayMemberBinding="{Binding AddressDesc}"/>
                    <GridViewColumn Header="点值" Width="auto" DisplayMemberBinding="{Binding PointValue}"/>
                    <GridViewColumn Header="报警时间" Width="auto" DisplayMemberBinding="{Binding AlarmTime,StringFormat={}{0:yyyy-MM-dd HH:mm:ss}}"/>
                    <GridViewColumn Header="确认时间" Width="auto" DisplayMemberBinding="{Binding ConfirmTime,StringFormat={}{0:yyyy-MM-dd HH:mm:ss}}"/>
                    <GridViewColumn Header="">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="确认报警" Width="100" Height="22" Margin="5,5,5,5" x:Name="btnConfirm" Click="btnConfirm_Click"></Button>
                                    <Button Content="报警重置" Width="100" Height="22" Margin="0,5,5,5"></Button>
                                </StackPanel>
                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding IsConfirm}" Value="True">
                                        <Setter TargetName="btnConfirm" Property="Visibility" Value="Hidden"></Setter>
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
            <ListView.ItemContainerStyle>
                <Style TargetType="{x:Type ListViewItem}">
                    <Setter Property="Background" Value="{Binding BgColor}"></Setter>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
    </Grid>
</Window>
